<?xml version="1.0" encoding="utf-8" ?>
<Shell xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KitsuApp.Views.AppShell"
             xmlns:view="clr-namespace:KitsuApp.Views"
             xmlns:local="clr-namespace:KitsuApp.Services"
             BackgroundColor="#131949">
    
    <TabBar>
        <Tab Title="Home"
             Icon="{local:EmbeddedImage ResourceId=KitsuApp.Assets.home.png }">
            <ShellContent ContentTemplate="{DataTemplate view:HomePage}" />
        </Tab>
        <Tab Title="Favorite"
             Icon="{local:EmbeddedImage ResourceId=KitsuApp.Assets.star.png }">
            <ShellContent ContentTemplate="{DataTemplate view:FavoritePage}" />
        </Tab>
        <Tab Title="Search"
             Icon="{local:EmbeddedImage ResourceId=KitsuApp.Assets.search.png }">
            <ShellContent ContentTemplate="{DataTemplate view:SearchPage}" />
        </Tab>
    </TabBar>
</Shell>