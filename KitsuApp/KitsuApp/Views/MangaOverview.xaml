                    <Label Text="Manga" FontSize="16" Margin="10,5" TextColor="#0D0D0D" FontFamily="InterBold"/>
                    <Button Text="&#xe043;" Style="{StaticResource buttonRandomStyle}" Clicked="BtnRandomAnime"/>
                </FlexLayout>

                <!--#region Trending now-->
                <FlexLayout>
                    <Label Text="Trending Now" FontSize="14" Margin="10,0" FontFamily="InterSemiBold" TextColor="#0D0D0D"></Label>
